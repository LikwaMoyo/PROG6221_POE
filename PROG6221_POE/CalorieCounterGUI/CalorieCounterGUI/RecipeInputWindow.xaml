<Window x:Class="CalorieCounterGUI.RecipeInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Recipe" Height="450" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Recipe Name:" />
        <TextBox x:Name="RecipeNameTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Ingredient Name:" />
        <TextBox x:Name="IngredientNameTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Quantity:" />
        <TextBox x:Name="QuantityTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Unit:" />
        <TextBox x:Name="UnitTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Calories:" />
        <TextBox x:Name="CaloriesTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Food Group:" />
        <TextBox x:Name="FoodGroupTextBox" Margin="0,0,0,5"/>

        <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="0,5,0,10"/>

        <TextBlock Text="Step Description:" />
        <TextBox x:Name="StepDescriptionTextBox" Margin="0,0,0,5"/>

        <Button Content="Add Step" Click="AddStep_Click" Margin="0,5,0,10"/>

        <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>