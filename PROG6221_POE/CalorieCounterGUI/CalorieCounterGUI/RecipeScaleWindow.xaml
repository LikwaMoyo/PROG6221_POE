<Window x:Class="CalorieCounterGUI.ScaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Enter scale factor:"/>
        <TextBox x:Name="ScaleFactorTextBox" Margin="0,5,0,10"/>
        <Button Content="Apply Scale" Click="ApplyScale_Click"/>
    </StackPanel>
</Window>